---
import logoH from '../images/logo-h.svg';
import logohb from '../images/logo-hb.svg';
import facebookW from '../images/social/white/facebook.svg';
import instagramW from '../images/social/white/instagram.svg';
import tiktokW from '../images/social/white/tiktok.svg';
import xW from '../images/social/white/x.svg';

export interface Props {
