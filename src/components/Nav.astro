<script is:inline>
  window.addEventListener("DOMContentLoaded",function(){
    const burgerIcon = document.getElementById("burgerIcon");
    const close = document.getElementById("closeburger");
    const ul = document.getElementById("wrapperContain");
    const button= document.getElementById("burgerButton");

    function burger (){
        if(!ul.classList.contains("view")){
            ul.classList.add("view");
            burgerIcon.style.display="none";
            close.style.display="block";
        } else {
            ul.classList.remove("view");
            burgerIcon.style.display="block";
            close.style.display="none";
        }
    }
    

    button.addEventListener("click", burger);

    const navwhite = document.getElementById("stick")

    function navWhite (){
        if(window.scrollY >= 200){
            navwhite.classList.add("viewnav");
        } else {
            navwhite.classList.remove("viewnav")
        }
    }
    
   window.addEventListener("scroll", navWhite);

});   
</script>
